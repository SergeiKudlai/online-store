{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "dir",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noEmitOnError": true,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*",
    "img.d.ts"
  ]
}